{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "properties": {
    "create_asg": {
      "type": "boolean",
      "default": true
    },
    "existing_asg_name": {
      "type": "string",
      "default": ""
    },
    "instance_type": {
      "type": "string",
      "default": "t3.xlarge"
    },
    "ami_id": {
      "type": "string",
      "default": ""
    },
    "aws_region": {
      "type": "string",
      "default": "eu-central-1"
    },
    "runner_group_name": {
      "type": "string"
    },
    "runner_group_token": {
      "type": "string",
      "default": ""
    },
    "storage_backend_role_arn": {
      "type": "string",
      "default": ""
    },
    "s3_bucket_name": {
      "type": "string"
    },
    "stackguardian": {
      "type": "object",
      "properties": {
        "api_key": {
          "type": "string"
        },
        "org_name": {
          "type": "string"
        },
        "api_uri": {
          "type": "string",
          "default": ""
        }
      },
      "required": ["api_key", "org_name"]
    },
    "override_names": {
      "type": "object",
      "properties": {
        "global_prefix": {
          "type": "string",
          "default": "SG_RUNNER"
        }
      },
      "required": ["global_prefix"],
      "additionalProperties": false
    },
    "network": {
      "type": "object",
      "properties": {
        "vpc_id": {
          "type": "string"
        },
        "subnet_id": {
          "type": "string"
        },
        "associate_public_ip": {
          "type": "boolean",
          "default": false
        },
        "additional_security_group_ids": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "required": ["vpc_id", "subnet_id"],
      "additionalProperties": false
    },
    "volume": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["gp2", "gp3", "io1", "io2"],
          "default": "gp3"
        },
        "size": {
          "type": "integer",
          "default": 100
        },
        "delete_on_termination": {
          "type": "boolean",
          "default": false
        }
      },
      "additionalProperties": false
    },
    "firewall": {
      "type": "object",
      "properties": {
        "ssh_key_name": {
          "type": "string",
          "default": ""
        },
        "ssh_public_key": {
          "type": "string",
          "default": ""
        },
        "ssh_access_rules": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          },
          "default": {}
        },
        "additional_ingress_rules": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "port": {
                "type": "integer"
              },
              "protocol": {
                "type": "string",
                "enum": ["tcp", "udp", "icmp"]
              },
              "cidr_blocks": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            },
            "required": ["port", "protocol", "cidr_blocks"],
            "additionalProperties": false
          },
          "default": {}
        }
      },
      "additionalProperties": false
    },
    "scaling": {
      "type": "object",
      "properties": {
        "min_size": {
          "type": "integer",
          "default": 1,
          "minimum": 1
        },
        "max_size": {
          "type": "integer",
          "default": 3
        },
        "desired_capacity": {
          "type": "integer",
          "default": 1
        },
        "scale_out_threshold": {
          "type": "integer",
          "default": 3
        },
        "scale_in_threshold": {
          "type": "integer",
          "default": 1
        },
        "scale_out_step": {
          "type": "integer",
          "default": 1
        },
        "scale_in_step": {
          "type": "integer",
          "default": 1
        },
        "scale_out_cooldown_duration": {
          "type": "integer",
          "default": 4,
          "minimum": 4
        },
        "scale_in_cooldown_duration": {
          "type": "integer",
          "default": 5
        }
      },
      "additionalProperties": false
    },
    "autoscaler_repo": {
      "type": "object",
      "properties": {
        "url": {
          "type": "string",
          "default": "https://github.com/StackGuardian/sg-runner-autoscaler"
        },
        "branch": {
          "type": "string",
          "default": "main"
        }
      },
      "additionalProperties": false
    },
    "lambda_runtime": {
      "type": "string",
      "default": "python3.11"
    },
    "lambda_timeout": {
      "type": "integer",
      "default": 60
    },
    "lambda_memory_size": {
      "type": "integer",
      "default": 128
    },
    "runner_startup_timeout": {
      "type": "integer",
      "default": 300
    }
  },
  "required": [
    "runner_group_name",
    "s3_bucket_name",
    "stackguardian"
  ]
}
