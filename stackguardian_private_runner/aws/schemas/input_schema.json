{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "properties": {
    "instance_type": {
      "type": "string",
      "default": "t3.xlarge"
    },
    "ami_id": {
      "type": "string",
      "default": "",
      "pattern": "^ami-.*"
    },
    "aws_region": {
      "type": "string"
    },
    "force_destroy_storage_backend": {
      "type": "boolean",
      "default": false
    },
    "stackguardian": {
      "type": "object",
      "properties": {
        "api_key": {
          "type": "string",
          "pattern": "^sgu_.*"
        },
        "org_name": {
          "type": "string"
        }
      },
      "required": ["api_key"]
    },
    "override_names": {
      "type": "object",
      "properties": {
        "global_prefix": {
          "type": "string",
          "default": "SG_RUNNER"
        },
        "runner_group_name": {
          "type": "string",
          "default": ""
        },
        "connector_name": {
          "type": "string",
          "default": ""
        }
      },
      "required": ["global_prefix"],
      "additionalProperties": false
    },
    "network": {
      "type": "object",
      "properties": {
        "vpc_id": {
          "type": "string"
        },
        "private_subnet_id": {
          "type": "string"
        },
        "public_subnet_id": {
          "type": "string"
        },
        "associate_public_ip": {
          "type": "boolean",
          "default": false
        }
      },
      "required": ["vpc_id", "public_subnet_id"],
      "additionalProperties": false
    },
    "volume": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["gp2", "gp3", "io1", "io2"],
          "default": "gp3"
        },
        "size": {
          "type": "integer",
          "default": 100,
          "minimum": 8
        },
        "delete_on_termination": {
          "type": "boolean",
          "default": false
        }
      },
      "required": ["size"],
      "additionalProperties": false
    },
    "firewall": {
      "type": "object",
      "properties": {
        "ssh_key_name": {
          "type": "string",
          "default": ""
        },
        "ssh_public_key": {
          "type": "string",
          "default": ""
        },
        "ssh_access_rules": {
          "type": "object",
          "additionalProperties": {
            "type": "string",
            "pattern": "^[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}/[0-9]{1,2}$"
          },
          "default": {}
        },
        "additional_ingress_rules": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "port": {
                "type": "integer",
                "minimum": 1,
                "maximum": 65535
              },
              "protocol": {
                "type": "string",
                "enum": ["tcp", "udp", "icmp"]
              },
              "cidr_blocks": {
                "type": "array",
                "items": {
                  "type": "string",
                  "pattern": "^[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}/[0-9]{1,2}$"
                },
                "minItems": 1
              }
            },
            "required": ["port", "protocol", "cidr_blocks"],
            "additionalProperties": false
          },
          "default": {}
        }
      },
      "additionalProperties": false
    },
    "image": {
      "type": "object",
      "properties": {
        "repository": {
          "type": "string"
        },
        "tag": {
          "type": "string"
        }
      },
      "required": ["repository", "tag"],
      "default": {
        "repository": "790543352839.dkr.ecr.eu-central-1.amazonaws.com/private-runner/autoscaler",
        "tag": "latest"
      },
      "additionalProperties": false
    },
    "scaling": {
      "type": "object",
      "properties": {
        "scale_out_cooldown_duration": {
          "type": "integer",
          "default": 4,
          "minimum": 4
        },
        "scale_in_cooldown_duration": {
          "type": "integer",
          "default": 5
        },
        "scale_out_threshold": {
          "type": "integer",
          "default": 3
        },
        "scale_in_threshold": {
          "type": "integer",
          "default": 2
        },
        "scale_in_step": {
          "type": "integer",
          "default": 1
        },
        "scale_out_step": {
          "type": "integer",
          "default": 1
        },
        "min_runners": {
          "type": "integer",
          "default": 1,
          "minimum": 1
        }
      },
      "additionalProperties": false
    }
  },
  "required": [
    "instance_type",
    "ami_id",
    "stackguardian",
    "aws_region",
    "network"
  ]
}
