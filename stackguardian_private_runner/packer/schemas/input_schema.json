{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "aws_region": {
      "type": "string"
    },
    "instance_type": {
      "type": "string",
      "default": "t3.medium"
    },
    "network": {
      "type": "object",
      "properties": {
        "vpc_id": {
          "type": "string",
          "pattern": "^vpc-.*$"
        },
        "public_subnet_id": {
          "type": "string",
          "pattern": "^subnet-.*$"
        },
        "private_subnet_id": {
          "type": "string",
          "pattern": "^subnet-.*$"
        },
        "proxy_url": {
          "type": "string",
          "default": ""
        }
      },
      "required": [
        "vpc_id"
      ]
    },
    "os": {
      "type": "object",
      "required": [
        "family"
      ],
      "allOf": [
        {
          "if": {
            "properties": {
              "family": {
                "const": "amazon"
              }
            }
          },
          "then": {
            "properties": {
              "family": {
                "type": "string",
                "enum": [
                  "amazon",
                  "ubuntu",
                  "rhel"
                ],
                "default": "amazon"
              },
              "update_os_before_install": {
                "type": "boolean",
                "default": true
              },
              "ssh_username": {
                "type": "string",
                "default": ""
              },
              "user_script": {
                "type": "string",
                "default": ""
              }
            }
          }
        },
        {
          "if": {
            "properties": {
              "family": {
                "not": {
                  "const": "amazon"
                }
              }
            }
          },
          "then": {
            "properties": {
              "family": {
                "type": "string",
                "enum": [
                  "amazon",
                  "ubuntu",
                  "rhel"
                ],
                "default": "amazon"
              },
              "version": {
                "type": "string",
                "minLength": 1
              },
              "update_os_before_install": {
                "type": "boolean",
                "default": true
              },
              "ssh_username": {
                "type": "string",
                "default": ""
              },
              "user_script": {
                "type": "string",
                "default": ""
              }
            },
            "required": [
              "version"
            ]
          }
        }
      ]
    },
    "packer_config": {
      "type": "object",
      "properties": {
        "version": {
          "type": "string",
          "default": "1.14.1",
          "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
        },
        "deregistration_protection": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": true
            },
            "with_cooldown": {
              "type": "boolean",
              "default": false
            }
          },
          "required": [
            "enabled",
            "with_cooldown"
          ],
          "default": {
            "enabled": true,
            "with_cooldown": false
          }
        },
        "delete_snapshots": {
          "type": "boolean",
          "default": true
        },
        "cleanup_amis_on_destroy": {
          "type": "boolean",
          "default": true
        }
      },
      "required": [
        "version"
      ]
    },
    "terraform": {
      "type": "object",
      "properties": {
        "primary_version": {
          "type": "string",
          "default": "",
          "pattern": "^(|[0-9]+\\.[0-9]+\\.[0-9]+)$"
        },
        "additional_versions": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
          },
          "default": []
        }
      },
      "required": []
    },
    "opentofu": {
      "type": "object",
      "properties": {
        "primary_version": {
          "type": "string",
          "default": "",
          "pattern": "^(|[0-9]+\\.[0-9]+\\.[0-9]+)$"
        },
        "additional_versions": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
          },
          "default": []
        }
      },
      "required": []
    }
  },
  "required": [
    "aws_region",
    "network"
  ]
}
